<div class="container">
  <section>
    <div id="container_demo" >
      <div id="wrapper">
        <div id="login" class="form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%- flash.each do |name, msg| -%>
                  <%= content_tag :div, msg, id: "flash_#{name}" %>
              <%- end -%>
              <p>
                <%= f.label :邮箱 %>
                <%= f.email_field :email, :required => true, :type => "text", autofocus: true %>
            </p>
            <p>
              <%= f.label :密码 %>
              <%= f.password_field :password, :required => true, :type => "password", autocomplete: "off" %>
            </p>
              <% if devise_mapping.rememberable? -%>
                <p class="keeplogin">
                  <%= f.check_box :remember_me %>
                  <%= f.label :保持登录 %>
                </p>
              <% end -%>
              <p class="login button">
                <%= f.submit "登录" %>
            </p>
              <p>
              还不是会员?
              <%= link_to "注册", new_registration_path(resource_name), :class => "to_register" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>
