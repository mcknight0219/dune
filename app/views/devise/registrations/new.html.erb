<div class="container">
  <section>
    <div id="container_demo" >
      <div id="wrapper">
        <div id="register" class="form">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
            <p>
              <%= f.label :邮箱 %>
              <%= f.email_field :email, :required => true, :type => "email", autofocus: true %>
            </p>
            <p>
              <%= f.label :密码 %>
              <%= f.password_field :password, :required => true, :type => "password", autocomplete: "off" %>
            </p>
            <p>
              <%= f.label :确认密码 %>
              <%= f.password_field :password_confirmation, :required => true, :type => "password", autocomplete: "off" %>
              </p>
            <p class="signin button">
              <%= f.submit "注册", :class => 'btn' %>
            </p>
              <p>
              已经是会员?
                <%= link_to "登陆", new_session_path(resource_name), :class => "to_register" %>
            </p>
          <% end %>
        </div>

      </div>
    </div>
  </section>
</div>
<a id="backtotop" href="#top"><i class="fa fa-chevron-up"></i></a>