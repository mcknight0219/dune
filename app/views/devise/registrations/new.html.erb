<div>
  <div class="wrapper row1">
    <header id="header" class="hoc clear">
      <div>
        <%= link_to image_tag("logo.png", :class => "loginimg"), root_path %>
      </div>
    </header>
  </div>
</div>

<div class="container">
  <section>
    <div id="container_demo" >
      <div id="wrapper">
        <div id="register" class="animate form">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
            <h1> 注册 </h1>
            <p>
              <%= f.label :邮箱：, :class => "youmail" %>
              <%= f.email_field :email, :required => true, :type => "email", :placeholder => "Email Address*", autofocus: true %>
            </p>
            <p>
              <%= f.label :密码：, :class => "youpasswd" %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, :required => true, :type => "password", :placeholder => "Password*", autocomplete: "off" %>
            </p>
            <p>
              <%= f.label :确认密码：, :class => "youpasswd" %>
              <%= f.password_field :password_confirmation, :required => true, :type => "password", :placeholder => "Confirm Password*", autocomplete: "off" %>
              </p>
            <p class="signin button">
              <%= f.submit "注册" %>
            </p>
            <p class="change_link">
              已经是会员?
              <%= link_to "Log in", new_session_path(resource_name), :class => "to_register" %>
            </p>
          <% end %>
        </div>

      </div>
    </div>
  </section>
</div>
<a id="backtotop" href="#top"><i class="fa fa-chevron-up"></i></a>