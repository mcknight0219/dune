<div class="wrapper row3">
  <main class="hoc container clear btmpad-none">
    <div class="content single-col">
      <h4 class="title-divider"><span>编辑地址</span></h4>
      <div class="form">
        <%=	form_for @address, url: address_path(@address), html: { method: 'patch'} do |f| %>
              <%= f.error_messages %>
              <% if flash[:notice] %>
                  <div id="flash_notice"><%= flash[:notice] %></div>
              <% end %>
              <% if flash[:error] %>
                  <div id="flash_alert"><%= flash[:error] %></div>
              <% end %>

            <div class='block'>
              <%= f.label :name, '收件人' %>
              <%= f.text_field :name %>
            </div>
            <div class='block'>
              <div class="city-group">
                <div class="one_third first">
                  <%=	f.label :state, '省份' %>
                  <%= f.select :state, ['--省份--', options_for_select(ChinaCity.list)], {:include_blank => false } , { :class => 'city-select' } %>
                </div>
                <div class="one_third">
                  <%=	f.label :city, '城市' %>
                  <%= f.select :city, [], {:include_blank => false}, { :class => 'city-select' } do %>
                    <option>--城市--</option>
                  <% end %>
                </div>
                <div class="one_third">
                  <%=	f.label :district, '地区' %>
                  <%= f.select :district, [], {:include_blank => false}, { :class => 'city-select' } do %>
                    <option>--地区--</option>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="block">
              <div class="two_third first">
                <%=	 f.label :address_line1, '详细地址' %>
                <%=	 f.text_field :address_line1 %>
              </div>
              <div class="one_third">
                <%=	f.label :post_code, '邮政编码' %>
                <%=	f.text_field :post_code %>
              </div>
            </div>

            <div class="block">
              <%=	f.label :mobile, '电话号码' %>
              <%=	f.phone_field :mobile %>
            </div>
             <div class="block">
              <%= f.label :id_number, '身份证号 *' %>
              <%= f.text_field :id_number %>
            </div>
            <div class="block">
              <div class="one_half first">
                <%= f.label :id_front, '身份证正面 *' %>
                <%= f.file_field :id_front %>
              </div>
              <div class="one_half">
                <%= f.label :id_front, '身份证背面 *' %>
                <%= f.file_field :id_back %>
              </div>
            </div>
            <div class="block">
              <%= f.submit '保存', :class => "btn mgt-small"%>
            </div>
        <% end %>
    </div>
    </div>
  </main>
</div>
