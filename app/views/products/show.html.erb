<div class="wrapper row3" style="flex:1;">
  <main class="hoc container clear">
    <div class="content">

      <div class="one_half first" style="margin-top: 20px;">
        <figure>
          <%= image_tag @product.image1.url, size: "350x350", style: "width:350px;height:350px" %>
        </figure>
      </div>
      <div class="one_half">
        <p style="font-weight: 600;font-size: 25px;"><%= @product.name %></p>
        <div style="">
          <span style="float:left;font-size: 18px;">价格:</span>
          <span style="float:left;font-size: 19px;color: red;text-align: left;margin-left:20px"><%= "#{@product.price} 加元" %></span>
        </div>
        <div class="clear"></div>
        <div style="font-weight: 400; font-size: 17px; margin-top:20px;">产品描述</div>
        <p style="padding-top:0px;color:gray;"><%= @product.detail %></p>
        <div style="margin-top:25px;">
          <%= form_tag new_cart_path do %>
              <%= submit_tag "加入购物车", :class => 'btn btn-lg' %>
          <% end %>
        </div>
      </div>
      </div>


    <div class="clear"></div>
  </main>
</div>

