<div id="app">
  <div class="wrapper row3">
    <main class="hoc container clear btmpad-none">
      <div class="content">
        <h2>1. 选择邮寄物品</h2>
        <div id="comments">
          <h4>物品明细:</h4>
          <%= form_tag do %>
              <div class="one_third first">
                <%= label_tag(:name, '名称') %>
                <%= text_field_tag(:name, '', :required => true, 'v-model': 'packageItem.name') %>
              </div>
              <div class="one_third">
                <%= label_tag(:quantity, '数量*') %>
                <%= number_field_tag(:name, '', :required => true, :min => 0, :step => 1, 'v-model': 'packageItem.quantity') %>
              </div>
              <div class="one_third">
                <%= label_tag(:price, '单价') %>
                <%= number_field_tag(:price, '', :min => 0, 'v-model': 'packageItem.price') %>
              </div>
              <div>
                <%= submit_tag('确定', 'v-on:click.prevent': 'addPackageItem()') %>
              </div>
          <% end %>
          <div class="package-item-list">
            <ul v-for="item in packageItems">
              <li>{{ item.name + ': ' + item.quantity}}</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="clear"></div>
      <div class="content">
        <h2>2. 选择地址</h2>
        <div class="wrapper row1">
          <div class="content"><%= link_to '新建', new_address_path(:returnUrl => packages_path) %></div>
        </div>
        <address-label v-for="address in addresses" v-bind:selected="selectedAddress === address" v-bind:address="address" v-on:delete="removeAddress(address)" v-on:selected="selectAddress(address)"></address-label>
      </div>
      <div class="clear"></div>
      <div class="content">
        <h2>3. 附加信息</h2>
        <%= form_tag do %>
            <div class="block">
              <%= label_tag(:pickup, '我需要上门取货服务  (Only in Edmonton)') %>
              <%= check_box_tag(:pickup, '', false, 'v-model': 'needPickup')  %>
            </div>
            <div class="block" v-if="needPickup">
              <%= label_tag(:pickup_address, '地址（Edmonton）') %>
              <%= text_field_tag(:pickup_address, '', :required => true, 'v-model': 'pickupAddress') %>
            </div>
            <div class="block">
              <%= label_tag(:note, '备注') %>
              <%= text_area(:note, :cols => 25, :rows => 10, 'v-model': 'note') %>
            </div>
            <div class="'block">
              <%= submit_tag('确定', 'v-on:click.prevent': 'submitPackage()') %>
            </div>
        <% end %>
      </div>
    </main>
  </div>
</div>
