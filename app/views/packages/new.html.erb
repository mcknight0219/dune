<div class="wrapper row3" style="flex:1;">
  <main class="hoc container clear">
    <div class="content">
      <ul class="progress-tracker progress-tracker--word progress-tracker--word-center">
        <li class="progress-step is-active">
          <span class="progress-marker"></span>
          <span class="progress-text is-bold">类型</span>
        </li>
        <li class="progress-step">
          <span class="progress-marker"></span>
          <span class="progress-text is-bold">
              添加物品
            </span>
        </li>

        <li class="progress-step">
          <span class="progress-marker"></span>
          <span class="progress-text is-bold">
              选择地址
            </span>
        </li>

        <li class="progress-step">
          <span class="progress-marker"></span>
          <span class="progress-text is-bold">
              完成
            </span>
        </li>
      </ul>
      <h4 class="title-divider"><span>选择物品类型</span></h4>
      <div id="comments">
        <%= form_tag 'new' do %>
          <div id="package-type-radios">
            <div class="one_third first">
              <label class="radio-container is-active">
                <p class="radio-icon">
                  <%= radio_button_tag :type, 'normal', :selected => true %>
                </p>
                <p class="type-text">普货</p>
              </label>
            </div>
            <div class="one_third">
              <label class="radio-container">
                <p class="radio-icon">
                  <%= radio_button_tag :type, 'luxury' %>
                </p>
                <p class="type-text">轻奢</p>
              </label>

            </div>
          </div>
            <div class="clear block btmspace-80 topspace-25">
              <p>如果您不清楚清奢侈品种类， 请查看<%= link_to '这里', rates_path %></p>
              <%= submit_tag '添加物品', :class => 'btn'%>
            </div>
        <% end %>
      </div>
    </div>
  </main>
</div>